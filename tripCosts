Function DrivingCost(float drivenMiles, float milesPerGallon, float dollarsPerGallon) returns float
   float cost
   cost = drivenMiles / milesPerGallon * dollarsPerGallon
   return cost
End Function

Function Main() returns nothing
   float milesPerGallon
   float dollarsPerGallon
   float trip1
   float trip2
   float trip3

   milesPerGallon = Get next input
   dollarsPerGallon = Get next input

   trip1 = DrivingCost(10.0, milesPerGallon, dollarsPerGallon)
   trip2 = DrivingCost(50.0, milesPerGallon, dollarsPerGallon)
   trip3 = DrivingCost(400.0, milesPerGallon, dollarsPerGallon)

   Put trip1 to output with 2 decimal places
   Put " " to output
   Put trip2 to output with 2 decimal places
   Put " " to output
   Put trip3 to output with 2 decimal places
End Function
